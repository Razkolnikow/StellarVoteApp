@using Microsoft.AspNetCore.Identity
@model bool

@inject SignInManager<StellarVoteApp.Data.Models.StellarVoteUser> SignInManager
@inject UserManager<StellarVoteApp.Data.Models.StellarVoteUser> UserManager

@{
    ViewData["Title"] = "Home Page";
    bool hasVoted = ViewBag.HasVoted;
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner4.png" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    You can vote from the comfort of your home
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner5.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Voting without borders
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner6.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Voting should be easy and accessible
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div col-sm-12>
        <h3 class="text-center">Your right to vote is now tokenized on Stellar! You can vote freely! It is easy, it is private and it is secure!</h3>
    </div>
</div>

@if (SignInManager.IsSignedIn(User))
{
    <div>
        @if (Model && !hasVoted)
        {
            <div class="jumbotron">
                <h2 class="text-center">Your voting account is created!</h2>
                <p class="text-center">You are all set!</p>
                <p class="text-center"><a class="btn btn-primary btn-lg" asp-controller="Vote" asp-action="Index" role="button">Vote</a></p>
            </div>
        }
        else if (!Model)
        {
            <div class="jumbotron">
                <h2 class="text-center">You have to set up your voting account</h2>
                <p class="text-center">Create voting account</p>
                <p class="text-center"><a class="btn btn-primary btn-lg" asp-controller="Vote" asp-action="CreateAccount" role="button">Create</a></p>
            </div>
        }
        else
        {
            <div class="jumbotron">
                <h2 class="text-center">Thank You for Voting!</h2>
                <p class="text-center">You are changing the future for the better!</p>
                <p class="text-center"><a class="btn btn-primary btn-lg" asp-controller="User" asp-action="Index" role="button">Check Profile here</a></p>
            </div>
        }
    </div>
}
