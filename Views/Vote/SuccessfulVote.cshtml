@model StellarVoteApp.Models.ViewModels.SendVoteViewModel
@{
}

<div class="row">
    <div class="col-sm-12">
        <h3 class="text-center">Your vote was sent successfully!</h3>
        <br />
        <h4 class="text-center">Your vote - @Model.ChosenCandidateName</h4>
        <br />
        <h4 class="text-center">
            Your vote was recorded in the blockchain by transaction with Hash -
            <a target="_blank" href="https://stellar.expert/explorer/testnet/tx/@Model.TxHash">
                @Model.TxHash
            </a>
        </h4>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <img class="custom-img" src="~/images/pic3.png" alt="Alternate Text" />
    </div>
</div>
